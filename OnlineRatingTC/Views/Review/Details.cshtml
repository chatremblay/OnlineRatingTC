@model OnlineRatingTC.ViewModels.ReviewViewModel



<!DOCTYPE html>

<head>
    <style>
        table, th, td {
            border: 1px solid black;
            border-collapse: collapse;
        }
    </style>
</head>


@*A user can view a list of all Reviews regardless of who created them that only displays the Review Rating.*@

<h2>Review</h2>
<table style="width:100%">
    <tr>
        <th>
            Name
        </th>
        <th>
            Review rating
        </th>
        <th>
            Service Type
        </th>
        <th>
            Comments
        </th>

    </tr>

    <tr>
        <td>
            @Html.DisplayFor(modelItem => Model.Review.User.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => Model.Review.ReviewRatingType.ReviewRatingTypeName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => Model.Review.ServiceType.ServiceTypeName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => Model.Review.Comments)
        </td>
    </tr>

</table>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}